<h1>Editing Book</h1>
<% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
<% end %>
<%= form_for(@book, url:"/books/#{@book.id}") do |f| %>

  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>本文</h4>
  <%= f.text_area :body %>

  <%= f.submit '保存' %>

<% end  %>

<%= link_to "show", book_path %>
<%= link_to "Back", books_path %>
